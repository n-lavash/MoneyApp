<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ActionBarStyle" parent="@style/Widget.AppCompat.ActionBar">
        <item name="android:textColor">@color/black</item>
    </style>
    
    <style name="EditTextStyle">
        <item name="colorAccent">@color/blue_400</item>
    </style>

    <style name="CustomDatePickerDialog" parent="ThemeOverlay.MaterialComponents.Dialog">
        <item name="android:windowBackground">@color/white</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="colorAccent">@color/blue_400</item>
    </style>

    <style name="EditTextValuesStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="boxStrokeColor">@color/blue_400</item>
        <item name="hintEnabled">true</item>
        <item name="hintTextColor">@color/blue_400</item>
        <item name="android:textCursorDrawable">@drawable/custom_cursor</item>
    </style>

    <style name="CustomCursorStyle" parent="Widget.AppCompat.EditText">
        <item name="colorControlNormal">@color/blue_400</item>
        <item name="colorControlActivated">@color/blue_400</item>
    </style>

    <style name="SplashTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="colorPrimary">@color/blue_400</item>
        <item name="colorPrimaryDark">@color/blue_400</item>
        <item name="colorAccent">@color/blue_400</item>
        <item name="android:statusBarColor">@color/blue_400</item>
    </style>
</resources>